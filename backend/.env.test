# Test Environment Variables for SoundMate AR Backend

# Server Configuration
NODE_ENV=test
PORT=5001

# Test Database Configuration (使用內存SQLite或測試資料庫)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soundmate_ar_test
DB_USER=postgres
DB_PASSWORD=postgres

# Mock Spotify API Configuration
SPOTIFY_CLIENT_ID=test_client_id
SPOTIFY_CLIENT_SECRET=test_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:5001/api/auth/spotify/callback

# H3 Configuration
H3_RESOLUTION=9

# Rate Limiting (更寬鬆的測試限制)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# JWT Secret for testing
JWT_SECRET=test_jwt_secret_key_for_testing_only

# Logging (減少測試時的日誌輸出)
LOG_LEVEL=error